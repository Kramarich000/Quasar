{
  "name": "quasar",
  "private": true,
  "version": "1.0.13",
  "main": "main.js",
  "description": "Quasar Browser",
  "author": "Kramarich",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build-e": "electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "npm run build && electron ./main.js",
    "release": "npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tippyjs/react": "^4.2.6",
    "electron-context-menu": "^4.0.5",
    "electron-devtools-installer": "^4.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.12.1",
    "gm": "^1.25.1",
    "icojs": "^0.19.5",
    "jimp": "^1.6.0",
    "lodash-es": "^4.17.21",
    "noisejs": "^2.1.0",
    "png-to-ico": "^2.1.8",
    "react-beautiful-dnd": "^13.1.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.0",
    "react-tooltip": "^5.28.1",
    "sharp": "^0.34.2",
    "tippy.js": "^6.3.7"
  },
  "build": {
    "appId": "com.kramarich.quasar",
    "productName": "Quasar",
    "publish": [
      {
        "provider": "github",
        "owner": "Kramarich000",
        "repo": "Quasar",
        "releaseType": "release",
        "channel": "latest"
      }
    ],
    "win": {
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "target": [
        {
          "target": "nsis-web",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icons/icons/win/icon.ico"
    },
    "nsisWeb": {
      "installerIcon": "public/icons/icons/win/icon.ico",
      "uninstallerIcon": "public/icons/icons/win/icon.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "displayLanguageSelector": true,
      "shortcutName": "Quasar",
      "warningsAsErrors": false,
      "runAfterFinish": true,
      "perMachine": false,
      "installerLanguages": [
        "en",
        "es",
        "zh_CN",
        "ar",
        "pt",
        "ru",
        "de",
        "fr",
        "ja",
        "ko"
      ],
      "license": "./LICENSE.txt",
      "menuCategory": "Quasar",
      "deleteAppDataOnUninstall": true
    },
    "afterPack": "prune-locales.js",
    "mac": {
      "icon": "public/icons/icons/mac/icon.icns",
      "target": [
        "dmg",
        "pkg"
      ],
      "identity": "Apple Distribution: Kramarich",
      "hardenedRuntime": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "public/icons/icons/png/256x256.png"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "createBrowserView.js",
      "!**/*.map",
      "!node_modules/.cache/**"
    ],
    "directories": {
      "buildResources": "dist"
    },
    "extraResources": [
      {
        "from": "node_modules/electron/dist/locales/",
        "to": "locales",
        "filter": [
          "en.pak",
          "ru.pak"
        ]
      }
    ],
    "asar": true
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.25.0",
    "@tailwindcss/vite": "^4.1.6",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "concurrently": "^9.1.2",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "tailwindcss": "^4.1.6",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
