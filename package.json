{
  "name": "quasar",
  "private": true,
  "version": "1.0.4",
  "main": "main.js",
  "description": "Quasar Browser",
  "author": "Kramarich",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build-e": "electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "npm run build && electron ./main.js",
    "release": "npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "@tippyjs/react": "^4.2.6",
    "electron-context-menu": "^4.0.5",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.12.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.0",
    "react-tooltip": "^5.28.1",
    "tippy.js": "^6.3.7"
  },
  "build": {
    "appId": "com.yourdomain.appname",
    "productName": "Quasar",
    "publish": [
      {
        "provider": "github",
        "owner": "Kramarich000",
        "repo": "Quasar",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis-web",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/vite.ico"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "buildResources": "dist"
    }
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.25.0",
    "@tailwindcss/vite": "^4.1.6",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "concurrently": "^9.1.2",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "tailwindcss": "^4.1.6",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
